<?xml version="1.0" encoding="UTF-8"?>
 
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
 
	<servlet>
		<servlet-name>Handbook</servlet-name>
		<servlet-class>org.suai.handbook.HandbookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PhoneForm</servlet-name>
		<servlet-class>org.suai.handbook.NewPhoneServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserForm</servlet-name>
		<servlet-class>org.suai.handbook.NewUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Users</servlet-name>
		<servlet-class>org.suai.user.UserServlet</servlet-class>
	</servlet>
 
	<servlet-mapping>
		<servlet-name>Handbook</servlet-name>
		<url-pattern>/handbook</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PhoneForm</servlet-name>
		<url-pattern>/new_phone_form</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserForm</servlet-name>
		<url-pattern>/new_user_form</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Users</servlet-name>
		<url-pattern>/users</url-pattern>
	</servlet-mapping>
 
</web-app>